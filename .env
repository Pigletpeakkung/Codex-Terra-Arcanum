# .env (for local development only)
NODE_ENV=development
APP_NAME=Thanatsitt Portfolio (Dev)
APP_URL=http://localhost:3000
CDN_URL=

# Analytics (disabled in dev)
GOOGLE_ANALYTICS_ID=
ENABLE_ANALYTICS=false
HOTJAR_ID=

# Contact Form (local testing)
CONTACT_FORM_ENDPOINT=http://localhost:8888/.netlify/functions/contact
NOTIFICATION_EMAIL=test@localhost.com
SENDGRID_API_KEY=

# GitHub
GITHUB_USERNAME=your_github_username
GITHUB_WEBHOOK_SECRET=test_secret_123

# Social Media
LINKEDIN_URL=https://linkedin.com/in/thanatsitt
TWITTER_URL=https://twitter.com/thanatsitt
GITHUB_URL=https://github.com/your_username

# Feature Flags (dev settings)
ENABLE_BLOG=true
ENABLE_PORTFOLIO_FILTER=true
ENABLE_DARK_MODE=true
ENABLE_ANIMATIONS=false

# Performance (dev settings)
CACHE_DURATION=0
ENABLE_SERVICE_WORKER=false
ENABLE_PWA=false

# Security (dev settings)
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=900000

# Database (local)
DATABASE_URL=postgresql://localhost:5432/thanatsitt_dev

# Third-party (test keys)
CLOUDINARY_CLOUD_NAME=test_cloud
CLOUDINARY_API_KEY=test_key
CLOUDINARY_API_SECRET=test_secret

# Monitoring (disabled in dev)
SENTRY_DSN=
LOG_LEVEL=debug

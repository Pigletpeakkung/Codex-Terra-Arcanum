{
  "name": "thanatsitt-portfolio",
  "version": "1.0.0",
  "description": "Cultural Navigator Portfolio - Bridging ancient wisdom with modern technology",
  "main": "index.html",
  "scripts": {
    "dev": "NODE_ENV=development npm run serve",
    "build": "NODE_ENV=production npm run build:prod",
    "build:dev": "NODE_ENV=development npm run build:assets",
    "build:staging": "NODE_ENV=staging npm run build:assets && npm run optimize:staging",
    "build:prod": "NODE_ENV=production npm run build:assets && npm run optimize:prod",
    "serve": "live-server --port=3000 --host=localhost --open=/",
    "build:assets": "npm run build:css && npm run build:js && npm run optimize:images",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./dist/css/styles.css",
    "build:js": "webpack --config webpack.config.js",
    "optimize:images": "imagemin src/assets/**/*.{jpg,png,svg} --out-dir=dist/assets",
    "optimize:staging": "npm run minify:html && npm run compress:assets",
    "optimize:prod": "npm run minify:html && npm run compress:assets && npm run generate:sitemap",
    "minify:html": "html-minifier --input-dir ./ --output-dir ./dist --file-ext html",
    "compress:assets": "gzip -9 -r dist/",
    "generate:sitemap": "node scripts/generate-sitemap.js",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.{js,css,html}",
    "analyze": "webpack-bundle-analyzer dist/js/bundle.js",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./reports/lighthouse.html",
    "deploy:staging": "NODE_ENV=staging npm run build:staging && npm run deploy:netlify:staging",
    "deploy:prod": "NODE_ENV=production npm run build:prod && npm run deploy:netlify:prod",
    "deploy:netlify:staging": "netlify deploy --dir=dist --site=staging-site-id",
    "deploy:netlify:prod": "netlify deploy --dir=dist --prod --site=prod-site-id"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "html-minifier": "^4.0.0",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "jest": "^29.7.0",
    "lighthouse": "^11.3.0",
    "live-server": "^1.2.2",
    "netlify-cli": "^17.10.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.6",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "alpinejs": "^3.13.3",
    "gsap": "^3.12.2"
  }
}

{
  "name": "thanatsitt-portfolio",
  "version": "1.0.0",
  "description": "Professional portfolio for Thanatsitt Santisamranwilai - Thai interdisciplinary creator specializing in fashion design, AI development, cultural consulting, and voice acting",
  "author": {
    "name": "Thanatsitt Santisamranwilai",
    "email": "thanattsitt.info@yahoo.co.uk",
    "url": "https://pegearts.com"
  },
  "homepage": "https://pigletpeakkung.github.io/Codex-Terra-Arcanum",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pigletpeakkung/Codex-Terra-Arcanum.git"
  },
  "bugs": {
    "url": "https://github.com/Pigletpeakkung/Codex-Terra-Arcanum/issues"
  },
  "keywords": [
    "portfolio",
    "fashion-design",
    "ai-development",
    "cultural-consulting",
    "voice-acting",
    "alpine-js",
    "static-site",
    "vanilla-javascript",
    "responsive-design",
    "thai",
    "creative-technology",
    "thanatsitt",
    "pigletpeakkung",
    "codex-terra-arcanum",
    "pegearts",
    "pwa",
    "netlify"
  ],
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --host=localhost --entry-file=index.html --watch=**/*.html,**/*.css,**/*.js --ignore=node_modules",
    "start": "npm run dev",
    "build": "npm run optimize && npm run generate-sitemap && npm run sw-precache",
    "build:prod": "npm run clean && npm run build",
    
    "optimize": "npm run minify-css && npm run minify-js && npm run optimize-images",
    "minify-css": "cleancss -o css/style.min.css css/style.css",
    "minify-js": "terser js/app.js -o js/app.min.js --compress --mangle --source-map",
    "optimize-images": "imagemin images/**/*.{jpg,jpeg,png,gif,webp} --out-dir=images/optimized --plugin=imagemin-mozjpeg --plugin=imagemin-pngquant",
    
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "sw-precache": "node scripts/generate-sw.js",
    
    "lint": "eslint **/*.js --ignore-path .gitignore",
    "lint:fix": "eslint **/*.js --fix --ignore-path .gitignore",
    "lint:check": "eslint **/*.js --ignore-path .gitignore",
    
    "format": "prettier --write **/*.{js,html,css,json,md} --ignore-path .gitignore",
    "format:check": "prettier --check **/*.{js,html,css,json,md} --ignore-path .gitignore",
    
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run format:check && npm run type-check",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./reports/lighthouse.html --chrome-flags='--headless'",
    "lighthouse:ci": "lhci autorun",
    
    "serve": "live-server --port=8080 --entry-file=index.html",
    "serve:dist": "live-server --port=8080 --entry-file=index.html --no-browser",
    
    "deploy": "npm run build && gh-pages -d .",
    "deploy:github": "npm run build && gh-pages -d . -m 'Deploy portfolio'",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=.",
    "deploy:vercel": "npm run build && vercel --prod",
    
    "predeploy": "npm run build",
    "postdeploy": "echo 'Portfolio deployed successfully! ðŸš€'",
    
    "clean": "rm -rf node_modules package-lock.json reports coverage .cache && npm install",
    "clean:cache": "rm -rf .cache reports coverage",
    
    "analyze": "npm run build && bundlesize",
    "security-check": "npm audit",
    "update-deps": "npm update && npm audit fix",
    
    "pre-commit": "npm run validate && npm run test:ci",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "alpinejs": "^3.13.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "bundlesize": "^0.18.1",
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "gh-pages": "^6.1.0",
    "husky": "^8.0.3",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "@lhci/cli": "^0.12.0",
    "live-server": "^1.2.2",
    "netlify-cli": "^17.10.1",
    "prettier": "^3.1.0",
    "terser": "^5.24.0",
    "typescript": "^5.3.2",
    "vercel": "^32.7.2"
  },
  "optionalDependencies": {
    "sharp": "^0.32.6"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "warn",
      "no-console": "warn",
      "no-debugger": "error",
      "no-undef": "error",
      "prefer-const": "error",
      "no-var": "error"
    },
    "globals": {
      "Alpine": "readonly",
      "AOS": "readonly",
      "emailjs": "readonly",
      "gtag": "readonly",
      "fbq": "readonly"
    },
    "ignorePatterns": [
      "node_modules/",
      "*.min.js",
      "vendor/",
      "reports/"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": true,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "vueIndentScriptAndStyle": false
  },
  "browserslist": {
    "production": [
      "> 1%",
      "last 2 versions",
      "not dead",
      "not ie 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/js/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.min.js",
      "!js/vendor/**",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "bundlesize": [
    {
      "path": "js/app.min.js",
      "maxSize": "50 kB"
    },
    {
      "path": "css/style.min.css",
      "maxSize": "20 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit",
      "pre-push": "npm run test:ci"
    }
  }
}

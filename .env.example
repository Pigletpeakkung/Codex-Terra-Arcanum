# =============================================================================
# THANATSITT PORTFOLIO - ENVIRONMENT VARIABLES EXAMPLE
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="Thanatsitt Portfolio"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://thanatsitt.com
APP_VERSION=1.0.0

# =============================================================================
# EMAILJS CONFIGURATION
# =============================================================================
# Get these from: https://www.emailjs.com/
EMAILJS_PUBLIC_KEY=your_emailjs_public_key_here
EMAILJS_SERVICE_ID=your_emailjs_service_id_here
EMAILJS_TEMPLATE_ID=your_emailjs_template_id_here
EMAILJS_CONTACT_TEMPLATE_ID=contact_form_template
EMAILJS_NEWSLETTER_TEMPLATE_ID=newsletter_template

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================
# Google Analytics 4
GA_TRACKING_ID=G-XXXXXXXXXX
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager (optional)
GTM_ID=GTM-XXXXXXX

# Facebook Pixel
FB_PIXEL_ID=123456789012345

# Hotjar (optional)
HOTJAR_ID=1234567
HOTJAR_SV=6

# Microsoft Clarity (optional)
CLARITY_PROJECT_ID=abcdefghij

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_BASE_URL=https://api.thanatsitt.com
API_VERSION=v1
API_TIMEOUT=10000

# Contact Form API
CONTACT_API_ENDPOINT=/api/contact
NEWSLETTER_API_ENDPOINT=/api/newsletter
ANALYTICS_API_ENDPOINT=/api/analytics

# API Keys
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# =============================================================================
# DATABASE (if using backend)
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=thanatsitt_portfolio
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# MongoDB (alternative)
MONGODB_URI=mongodb://localhost:27017/thanatsitt_portfolio
MONGODB_DATABASE=thanatsitt_portfolio

# =============================================================================
# CLOUD STORAGE & CDN
# =============================================================================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=thanatsitt-portfolio-assets
AWS_URL=https://thanatsitt-portfolio-assets.s3.amazonaws.com

# Cloudinary (for image optimization)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# =============================================================================
# SOCIAL MEDIA INTEGRATION
# =============================================================================
# LinkedIn
LINKEDIN_PROFILE_URL=https://linkedin.com/in/thanatsitt
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# GitHub
GITHUB_USERNAME=thanatsitt
GITHUB_TOKEN=your_github_personal_access_token

# Instagram
INSTAGRAM_USERNAME=thanatsitt
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Twitter/X
TWITTER_USERNAME=thanatsitt
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# YouTube (if applicable)
YOUTUBE_CHANNEL_ID=your_youtube_channel_id
YOUTUBE_API_KEY=your_youtube_api_key

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
# Stripe (for payments/donations)
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal (alternative payment)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=live

# Calendly (for booking)
CALENDLY_USERNAME=thanatsitt
CALENDLY_API_TOKEN=your_calendly_api_token

# Typeform (for advanced forms)
TYPEFORM_API_TOKEN=your_typeform_api_token

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================
# Twilio (SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (email service)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=hello@thanatsitt.com
SENDGRID_FROM_NAME="Thanatsitt Santisamranwilai"

# Mailchimp (newsletter)
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_LIST_ID=your_mailchimp_list_id
MAILCHIMP_SERVER_PREFIX=us1

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT Secrets (if using authentication)
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRATION=24h

# Session Security
SESSION_SECRET=your_session_secret_here
SESSION_LIFETIME=120

# CORS Settings
CORS_ALLOWED_ORIGINS=https://thanatsitt.com,https://www.thanatsitt.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# PERFORMANCE & MONITORING
# =============================================================================
# Redis (caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Sentry (error tracking)
SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_ENVIRONMENT=production

# New Relic (performance monitoring)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME="Thanatsitt Portfolio"

# =============================================================================
# CONTENT MANAGEMENT
# =============================================================================
# Contentful (headless CMS)
CONTENTFUL_SPACE_ID=your_contentful_space_id
CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token
CONTENTFUL_PREVIEW_TOKEN=your_contentful_preview_token

# Strapi (alternative CMS)
STRAPI_API_URL=https://cms.thanatsitt.com
STRAPI_API_TOKEN=your_strapi_api_token

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development flags
DEV_MODE=false
DEBUG_ANALYTICS=false
MOCK_API_RESPONSES=false
ENABLE_CONSOLE_LOGS=false

# Local development
LOCAL_API_URL=http://localhost:3000
LOCAL_DB_URL=mongodb://localhost:27017/thanatsitt_dev

# Testing
TEST_EMAIL=test@thanatsitt.com
TEST_API_KEY=test_api_key_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ANALYTICS=true
ENABLE_SERVICE_WORKER=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_OFFLINE_MODE=true
ENABLE_DARK_MODE=true
ENABLE_ANIMATIONS=true
ENABLE_SOUND_EFFECTS=false
ENABLE_BLOG=false
ENABLE_SHOP=false
ENABLE_BOOKING=true
ENABLE_NEWSLETTER=true
ENABLE_TESTIMONIALS=true
ENABLE_GALLERY=true
ENABLE_VOICE_SAMPLES=true

# =============================================================================
# LOCALIZATION
# =============================================================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,th,zh
TIMEZONE=Europe/London

# Translation service (optional)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key

# =============================================================================
# SEO & MARKETING
# =============================================================================
# Google Search Console
GOOGLE_SITE_VERIFICATION=your_google_site_verification_code

# Bing Webmaster Tools
BING_SITE_VERIFICATION=your_bing_site_verification_code

# Pinterest
PINTEREST_SITE_VERIFICATION=your_pinterest_verification_code

# =============================================================================
# BACKUP & DEPLOYMENT
# =============================================================================
# Deployment
DEPLOY_HOOK_URL=https://api.netlify.com/build_hooks/your_hook_id
DEPLOY_BRANCH=main

# Backup
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=thanatsitt-backups

# =============================================================================
# CONTACT INFORMATION
# =============================================================================
CONTACT_EMAIL=hello@thanatsitt.com
CONTACT_PHONE=+44123456789
CONTACT_ADDRESS="London, United Kingdom"
BUSINESS_HOURS="Mon-Fri 9AM-6PM GMT"

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================
PRIVACY_POLICY_URL=https://thanatsitt.com/privacy
TERMS_OF_SERVICE_URL=https://thanatsitt.com/terms
COOKIE_POLICY_URL=https://thanatsitt.com/cookies

# GDPR Compliance
ENABLE_COOKIE_CONSENT=true
ENABLE_DATA_EXPORT=true
ENABLE_DATA_DELETION=true

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================
# Portfolio specific

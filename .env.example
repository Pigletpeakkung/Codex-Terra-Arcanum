# ===========================================
# Thanatsitt Portfolio Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# ===========================================
# APP CONFIGURATION
# ===========================================
REACT_APP_SITE_URL=https://pigletpeakkung.github.io/Codex-Terra-Arcanum
REACT_APP_SITE_NAME=Thanatsitt Portfolio - Codex Terra Arcanum
REACT_APP_VERSION=1.0.0
REACT_APP_ENV=production

# ===========================================
# GITHUB CONFIGURATION
# ===========================================
REACT_APP_GITHUB_USERNAME=Pigletpeakkung
REACT_APP_GITHUB_REPO=Codex-Terra-Arcanum

# ===========================================
# CONTACT & SOCIAL MEDIA
# ===========================================
REACT_APP_EMAIL=thanattsitt.info@yahoo.co.uk
REACT_APP_WEBSITE_URL=https://pegearts.com
REACT_APP_LINKEDIN_URL=https://linkedin.com/in/thanatsitt
REACT_APP_GITHUB_URL=https://github.com/Pigletpeakkung
REACT_APP_INSTAGRAM_URL=https://instagram.com/thanatsitt
REACT_APP_TWITTER_URL=https://twitter.com/thanatsitt

# ===========================================
# CONTACT FORM (Choose one service)
# ===========================================
# Formspree (https://formspree.io)
REACT_APP_FORMSPREE_ENDPOINT=your_formspree_endpoint_here

# EmailJS (https://emailjs.com)
REACT_APP_EMAILJS_SERVICE_ID=your_emailjs_service_id
REACT_APP_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
REACT_APP_EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# Netlify Forms (if using Netlify)
REACT_APP_NETLIFY_FORM_NAME=contact

# ===========================================
# ANALYTICS & TRACKING
# ===========================================
# Google Analytics 4
REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# Microsoft Clarity
REACT_APP_CLARITY_PROJECT_ID=your_clarity_project_id

# Hotjar (optional)
REACT_APP_HOTJAR_ID=your_hotjar_id

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# Netlify
REACT_APP_NETLIFY_SITE_ID=your_netlify_site_id

# Vercel
REACT_APP_VERCEL_URL=your_vercel_url

# ===========================================
# FEATURE FLAGS
# ===========================================
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_CONTACT_FORM=true
REACT_APP_ENABLE_BLOG=false
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_ENABLE_PWA=true

# ===========================================
# API ENDPOINTS (if using external APIs)
# ===========================================
# Content Management System
REACT_APP_CMS_API_URL=your_cms_api_url
REACT_APP_CMS_API_KEY=your_cms_api_key

# Portfolio Data API
REACT_APP_PORTFOLIO_API_URL=your_portfolio_api_url

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Only used in development
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_API=false

# ===========================================
# THIRD-PARTY SERVICES
# ===========================================
# Cloudinary (for image optimization)
REACT_APP_CLOUDINARY_CLOUD_NAME=your_cloudinary_name

# Unsplash (for placeholder images)
REACT_APP_UNSPLASH_ACCESS_KEY=your_unsplash_key

# ===========================================
# SECURITY
# ===========================================
# reCAPTCHA (for contact form protection)
REACT_APP_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# ===========================================
# LOCALIZATION
# ===========================================
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,th

# ===========================================
# PERFORMANCE
# ===========================================
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_CACHE_VERSION=1.0.0

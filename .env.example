# .env.example - Copy to .env and fill in your values

# Application Configuration
NODE_ENV=development
APP_NAME=Thanatsitt Portfolio
APP_URL=http://localhost:3000
CDN_URL=

# Analytics & Tracking
GOOGLE_ANALYTICS_ID=your_google_analytics_id
ENABLE_ANALYTICS=false
HOTJAR_ID=your_hotjar_id

# Contact & Communication
CONTACT_FORM_ENDPOINT=your_contact_endpoint
NOTIFICATION_EMAIL=your_email@domain.com
SENDGRID_API_KEY=your_sendgrid_api_key

# GitHub Integration
GITHUB_USERNAME=your_github_username
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Social Media URLs
LINKEDIN_URL=your_linkedin_url
TWITTER_URL=your_twitter_url
GITHUB_URL=your_github_url

# Feature Flags
ENABLE_BLOG=false
ENABLE_PORTFOLIO_FILTER=true
ENABLE_DARK_MODE=true
ENABLE_ANIMATIONS=true

# Performance & Caching
CACHE_DURATION=86400
ENABLE_SERVICE_WORKER=true
ENABLE_PWA=true

# Security
CORS_ORIGIN=your_domain
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Database
DATABASE_URL=your_database_url

# Third-party Services
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

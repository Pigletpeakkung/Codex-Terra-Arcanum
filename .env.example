PORTFOLIO_ACCENT_COLOR=#D4AF37
PORTFOLIO_ANIMATION_SPEED=300
PORTFOLIO_LAZY_LOADING=true

# Voice acting samples
VOICE_SAMPLES_CDN=https://voice-samples.thanatsitt.com
